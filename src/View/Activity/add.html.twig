{% extends 'layout.html.twig' %}

{% block title %}Ajout d'activité{{parent()}}{% endblock %}

{% block header %}
    <section class="header">
        <div class="top-logo">
            <a href="/"><img src="/assets/images/logo-reimspiration.svg" alt="logo REIMSpiration" /></a>
        </div>
        <div class="search-container">
            <h1 class="add-activity-title">Ajout d'activité</h1>
            <div class="top-link-btn">
                <a href="/"><i class="fa fa-home"></i></a>
                <div class="tooltip-add">
                    <a href="/add"><i class="fa fa-plus"></i></a>
                    <span class="tooltiptext-add">Ajouter une activité</span>
                </div>
            </div>
        </div>
    </section>
    <span class="covid-banner">
        <div>

            <span class="covid-text">⚠️ Toutes les informations et actualités liées au contexte sanitaire actuel de la Covid 19</span>
            <a href="/info-covid"><button class="covid-btn">En savoir plus</button></a>
        </div>
    </span>
{% endblock %}

{% block addActivity %}
    <section class="action-block-activity">
        <div class="container-activity-action">
            <div class="form-block">
                <form action="" method="post" enctype="multipart/form-data">
                    <input type="hidden" value="{{ activities.id }}" name="id">
                    {# CATEGORY #}
                    <div class="form-block-inline">
                        <div class="tooltip"><i class="fa fa-question-circle"></i>
                            <span class="tooltiptext">Max 50 caractères<br><br>Si plusieurs catégories sont concernées, séparer les catégories par une virgule et sans espace entre les deux.<br><br><span style="color: #000000;">Ex : ART,CINEMA</span></span>
                        </div>
                        <label class="label-name" for="name">Catégorie(s)</label>
                        <input type="text" id="name" name="name" required value="{{ categories.name }}" placeholder="Ma ou mes catégories">
                    </div>
                    {# MARKDOWN #}
                    <div class="form-block-inline">
                        <div class="tooltip"><i class="fa fa-question-circle"></i>
                            <span class="tooltiptext">Max 50 caractères</span>
                        </div>
                        <label class="label-name" for="markdown">Titre activité</label>
                        <input type="text" id="markdown" name="markdown" required value="{{ activities.markdown }}" placeholder="Titre de mon activité">
                    </div>
                    {# ACTIVITY DESCRIPTION #}
                    <div class="form-block-inline">
                        <div class="tooltip"><i class="fa fa-question-circle"></i>
                            <span class="tooltiptext">Max 250 caractères</span>
                        </div>
                        <label class="label-name" for="description">Description</label>
                    </div>
                    <div>
                        <textarea id="description" name="description" required spellcheck="true" rows="4" cols="50" tabindex="4" value="{{ activities.description }}" placeholder="Brève description de mon activité"></textarea>
                    </div>
                    {# PERIOD #}
                    <div class="form-block-inline">
                        <label class="label-period" for="date_start">Période</label>
                    </div>
                    <div class="block-date">
                        <input type="date" id="date_start" name="date_start" required min="2020-11-01" max="2411-12-31">
                        <input type="date" id="date_end" name="date_end" required min="2020-11-01" max="2411-12-31">
                    </div>
                    {# AGE #}
                    <div class="champ">
                        <div class="label-name">Public concerné</div>
                        <div class="block-age">
                            <div>
                                <input type="checkbox" id="3-5" name="ranges[]" value="1">
                                <label for="3-5">3 - 5 ans</label>
                            </div>
                            <div>
                                <input type="checkbox" id="5-8" name="ranges[]" value="2">
                                <label for="5-8">5 - 8 ans</label>
                            </div>
                            <div>
                                <input type="checkbox" id="8-10" name="ranges[]" value="3">
                                <label for="8-10">8 - 10 ans</label>
                            </div>
                            <div>
                                <input type="checkbox" id="10-13" name="ranges[]" value="4">
                                <label for="10-13">10 - 13 ans</label>
                            </div>
                            <div>
                                <input type="checkbox" id="adolescents" name="ranges[]" value="5">
                                <label for="adolescents">Adolescents</label>
                            </div>
                            <div>
                                <input type="checkbox" id="adultes" name="ranges[]" value="6">
                                <label for="adultes">Adultes</label>
                            </div>
                        </div>
                    </div>
                    {# PRICE #}
                    <div class="form-block-inline">
                        <input type="radio" id="gratuit" name="price" value="Gratuit" checked>
                        <label for="gratuit">Gratuit</label>
                        <input type="radio" id="payant" name="price" value="Payant">
                        <label for="payant">Payant</label>
                    </div>
                    {# IMAGE #}
                    <div class="form-block-inline">
                        <div class="tooltip"><i class="fa fa-question-circle"></i>
                            <span class="tooltiptext">Images carrées pour éviter tout rognage.<br><br><span style="color: #000000; text-decoration: underline;">Formats acceptés :</span><br>jpg, jpeg, png, pdf</span>
                        </div>
                        <label class="label-name-small" for="img">Image</label>
                        <input type="file" id="img" name="img">
                    </div>
                    {# LINK #}
                    <div class="form-block-inline">
                        <div class="tooltip"><i class="fa fa-question-circle"></i>
                            <span class="tooltiptext">Lien donnant plus d'infos sur l'activité</span>
                        </div>
                        <label class="label-name-small" for="link">Lien</label>
                        <input type="url" id="link" name="link" value="{{ activities.link }}" placeholder="https://example.com">
                    </div>
                    {# SUBMIT BUTTON #}
                    <input class="input-button" type="submit" value="Valider">
                </form>
                    <div class="block-button-back">
                        <a href="/"><button class="input-button-back">Retour</button></a>
                    </div>
            </div>
            <div class="illustration-block-add">
                <img src="/assets/images/logo-ajout-activite.svg" alt="logo REIMSpiration - Ajout d'activité" />
            </div>
            <div class="error-popup">{{ error }}</div>
        </div>
    </section>
{% endblock %}

